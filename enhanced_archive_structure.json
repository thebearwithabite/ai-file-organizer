      ]
    },
    
    "time_based_helpers": {
      "auto_archive_suggestions": "After 12 months of inactivity",
      "seasonal_reminders": "Tax season prep, year-end reviews",
      "context_preservation": "Keep related files together always"
    }
  },
  
  "search_optimization": {
    "semantic_chunks": {
      "contracts": "By parties, terms, dates, amounts",
      "creative_content": "By themes, collaborators, publication status",
      "financial_docs": "By tax year, expense category, vendor"
    },
    
    "cross_reference_links": {
      "client_connections": "Link all Client Name-related docs across categories",
      "project_connections": "Link creative and business aspects of same project",
      "temporal_connections": "Link documents by time periods"
    }
  }
