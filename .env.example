# AI File Organizer Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to git!

# ============================================================================
# API Keys and Credentials
# ============================================================================

# Gemini Vision API (required for Phase 2 vision features)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API (optional, for enhanced classification)
OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# Google Drive Integration
# ============================================================================

# Google Drive credentials (set up via google_drive_auth.py)
# Credentials file will be created at: gdrive_credentials.json (in .gitignore)

# ============================================================================
# Application Settings
# ============================================================================

# Skip integration tests (useful for CI/CD)
SKIP_INTEGRATION_TESTS=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# Database Settings
# ============================================================================

# ChromaDB directory (defaults to ./chroma_db)
CHROMA_DB_PATH=./chroma_db

# ============================================================================
# Development Settings
# ============================================================================

# Development mode (enables debug features)
DEV_MODE=false

# Port for web interface (default: 8000)
WEB_PORT=8000

# ============================================================================
# Security Notes
# ============================================================================
# - Never commit this file with real values
# - Use strong, unique API keys
# - Rotate keys regularly
# - Keep backups in secure location (password manager)
# - Check .gitignore includes .env and .env.local
