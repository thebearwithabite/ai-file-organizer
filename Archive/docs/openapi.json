          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/VEOPromptResponse"
                  },
                  "title": "Response List Prompts Api Veo Prompts Get"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "veo"
        ],
        "summary": "Create Prompt",
        "description": "Create or update a VEO prompt from vision analysis.\n\nThis endpoint:\n1. Accepts normalized prompt input\n2. Stores in database (insert/update/skip based on confidence delta)\n3. Emits learning signal only for inserts and updates\n\nArgs:\n    prompt_input: VEO prompt data\n\nReturns:\n    Prompt with ID, action taken, and event_id",
